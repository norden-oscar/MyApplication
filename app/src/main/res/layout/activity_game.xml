<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscar.myapplication.GameActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/btnStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showState"
        android:layout_below="@+id/btnStart"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignParentEnd="true"
        android:minHeight="100dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputGuess"
        android:layout_below="@+id/showState"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:hint="Write guess here" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send guess"
        android:id="@+id/btnGuess"
        android:layout_below="@+id/inputGuess"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wrong guesses: "
        android:id="@+id/textGuess"
        android:layout_marginStart="28dp"
        android:layout_alignTop="@+id/btnStart"
        android:layout_toEndOf="@+id/btnStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="no"
        android:id="@+id/textLife"
        android:layout_alignBottom="@+id/textGuess"
        android:layout_toEndOf="@+id/textGuess" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total score: "
        android:id="@+id/textView"
        android:layout_below="@+id/textGuess"
        android:layout_alignStart="@+id/textGuess" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="number"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

</RelativeLayout>
